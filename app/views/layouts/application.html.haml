                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{"data-url" => "users/new?is_receptionist=true", :href => "#"}
                        Add Receptionist
      %ul#main-tabs.tabs.nav.nav-tabs
        %li.active
          %a{"data-url" => "/", :href => "#overview"} Overview
        %li
          %a{"data-url" => "/calls", :href => "#calls"} Call History
      .tab-content
        #overview.tab-pane.active
          Overview
        #calls.tab-pane
          Call History
      %script#modal_template{:type => "text/html"}
        .modal
