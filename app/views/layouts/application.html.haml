          %input{:name => "is_receptionist", :type => "hidden", :value => "true"}
            %fieldset
              .control-group
                %label.control-label{:for => "user[acd_api_id]"} Staff Member
                .controls
                  %select.member_of_staff{:name => "user[acd_api_id]"}
                    %option Please choose one
                    %option 2
                    %option 3
                    %option 4
                    %option 5
